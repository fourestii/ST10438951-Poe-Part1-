<Window x:Class="AcademicClaimsSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AcademicClaimsSystem"
        mc:Ignorable="d"
        Title="Academic Claims System" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="StatNumber" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#FF3498DB"/>
        </Style>

        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="10"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Background" Value="#FF3498DB"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Background="#FF2C3E50">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="W" FontSize="20" Margin="0,0,10,0"/>
                <TextBlock Text="Academic Claims System" Foreground="White" FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <TextBlock Text="Mr. Jackson" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <Button Content="Logout" Padding="10,5" Background="#FF3498DB" Foreground="White" BorderBrush="Transparent"/>
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <TabControl Grid.Row="1">
            <!-- Dashboard Tab -->
            <TabItem Header="Dashboard">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Welcome Message -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="20,10">
                        <TextBlock Text="Welcome, Mr. Jckson" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Statistics -->
                    <UniformGrid Grid.Row="1" Rows="1" Columns="4" Margin="20,0">
                        <Border Style="{StaticResource Card}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                <TextBlock Text="5" Style="{StaticResource StatNumber}"/>
                                <TextBlock Text="Pending Claims" Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource Card}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                <TextBlock Text="12" Style="{StaticResource StatNumber}" Foreground="#FF2ECC71"/>
                                <TextBlock Text="Approved Claims" Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource Card}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                <TextBlock Text="2" Style="{StaticResource StatNumber}" Foreground="#FFE74C3C"/>
                                <TextBlock Text="Rejected Claims" Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource Card}">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                                <TextBlock Text="R6, 500" Style="{StaticResource StatNumber}"/>
                                <TextBlock Text="Total Claimed" Style="{StaticResource StatLabel}"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </Grid>
            </TabItem>

            <!-- Submit Claim Tab -->
            <TabItem Header="Submit Claim">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Submit New Expense Claim" Style="{StaticResource HeaderText}"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Claim Form -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <Label Content="Claim Type" FontWeight="Bold"/>
                            <ComboBox Margin="0,5,0,15" SelectedIndex="0">
                                <ComboBoxItem>Select claim type...</ComboBoxItem>
                                <ComboBoxItem>Travel Expenses</ComboBoxItem>
                                <ComboBoxItem>Research Materials</ComboBoxItem>
                                <ComboBoxItem>Conference Fees</ComboBoxItem>
                                <ComboBoxItem>Software Licenses</ComboBoxItem>
                                <ComboBoxItem>Other</ComboBoxItem>
                            </ComboBox>

                            <Label Content="Amount (R)" FontWeight="Bold"/>
                            <TextBox Margin="0,5,0,15" Text="0.00"/>

                            <Label Content="Expense Date" FontWeight="Bold"/>
                            <DatePicker Margin="0,5,0,15"/>

                            <Label Content="Description" FontWeight="Bold"/>
                            <TextBox Margin="0,5,0,15" Height="80" TextWrapping="Wrap" AcceptsReturn="True"
                                     Text="Provide details about this expense..."/>
                        </StackPanel>

                        <!-- Document Upload -->
                        <StackPanel Grid.Column="1">
                            <Label Content="Supporting Documents" FontWeight="Bold"/>
                            <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Height="200" Margin="0,5,0,15">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Button Content="Upload Documents" Padding="20,10" Background="#FF3498DB" 
                                            Foreground="White" BorderBrush="Transparent" Click="UploadButton_Click"/>
                                    <TextBlock Text="PDF, JPG, or PNG files" HorizontalAlignment="Center" Margin="0,10,0,0" Foreground="Gray"/>
                                </StackPanel>
                            </Border>

                            <Button Content="Submit Claim" Style="{StaticResource PrimaryButton}" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- My Claims Tab -->
            <TabItem Header="My Claims">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="My Claims History" Style="{StaticResource HeaderText}"/>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Claims}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="100"/>
                            <DataGridTextColumn Header="Date Submitted" Binding="{Binding DateSubmitted}" Width="120"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                            <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="80"/>
                            <DataGridTemplateColumn Header="Status" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="10" Padding="5,2" Background="{Binding StatusBackground}">
                                            <TextBlock Text="{Binding Status}" HorizontalAlignment="Center" Foreground="{Binding StatusForeground}"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="View" Padding="5,2" Click="ViewClaim_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Documents Tab -->
            <TabItem Header="Documents">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Document Repository" Style="{StaticResource HeaderText}"/>

                    <ListView Grid.Row="1" ItemsSource="{Binding Documents}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10" Margin="0,5" Background="White" CornerRadius="3">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ“„" FontSize="16" Margin="0,0,10,0"/>
                                            <TextBlock Text="{Binding FileName}" VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <Button Grid.Column="1" Content="Download" Padding="10,5" Click="DownloadDocument_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </TabItem>

            <!-- Approvals Tab (for coordinators/managers) -->
            <TabItem Header="Approvals" Visibility="Collapsed">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Pending Approvals" Style="{StaticResource HeaderText}"/>

                    <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Claim ID" Width="100"/>
                            <DataGridTextColumn Header="Lecturer" Width="150"/>
                            <DataGridTextColumn Header="Date Submitted" Width="120"/>
                            <DataGridTextColumn Header="Description" Width="*"/>
                            <DataGridTextColumn Header="Amount" Width="80"/>
                            <DataGridTemplateColumn Header="Actions" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Approve" Padding="5,2" Margin="0,0,5,0" Background="#FF2ECC71" Foreground="White"/>
                                            <Button Content="Reject" Padding="5,2" Background="#FFE74C3C" Foreground="White"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Approve All" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0"/>
                        <Button Content="Request More Info" Style="{StaticResource PrimaryButton}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="Academic Claims System v1.0 | Â© 2025"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>